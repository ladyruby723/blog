<!DOCTYPE html>
<html>
  <head>
    <title>My Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-inverse navbar-toggleable-md bg-inverse">
      <div class="container">
        <%= link_to "My Blog", root_path, class: "navbar-brand" %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Contact", contact_path, class: "nav-link" %></li>
          <% if contributor_signed_in? %>
            <li class="nav-item pull-md-right"><%= link_to "Log out", 
            signout_path, method: :delete, class: "nav-link btn btn-secondary" %></li>
          <% else %>
            <li class="nav-item pull-md-right"><%= link_to "Sign up", 
            signup_path, class: "nav-link btn btn-secondary" %></li>
            <li class="nav-item pull-md-right"><%= link_to "Sign in", 
            signin_path, class: "nav-link btn btn-secondary" %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%# Flash Messages %>
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>
    
    <!-- Page Content -->
    <%= yield %>

  </body>
</html>
