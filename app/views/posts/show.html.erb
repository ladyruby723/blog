<div class="container">
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <div class="card card-block">
        <h3 class="card-contributor"><%= @post.contributor.username %></h3>
        <h4 class="card-title"><%= @post.title %></h4>
        <% if @post.content? %>
          <p class="card-text"><%= @post.content %></p>
        <% end %>
        <% if @post.contributor == current_contributor %>
          <%= link_to 'Edit', edit_post_path(@post) %>
          <%= link_to 'Delete', posts, method: :delete class: "card-link" %>
        <% end %>
        <%= link_to 'Back', posts_path %>
      </div>
    </div>
  </div>
</div>